@model List<Location.Models.Locationssave>


@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
<script src="~/Scripts/common.js"></script>
<link href="~/Content/loader.css" rel="stylesheet" />
<script type="text/javascript" src="@Url.Content("~/Scripts/spin.min.js")"></script>
<script src="~/Scripts/loader.js"></script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ActionLink("Create New", "Edit")

    <div id="loading">
        <div id="loadingcontent">
            <p id="loadingspinner">
                Searching things...
                @*Please wait while Fetching Data...*@
            </p>
        </div>
    </div>

    <div class="form-horizontal">
        <h4>Locations</h4>
        <hr />

        <h5 class="text-success" id="msg"><b>@ViewBag.Message</b></h5>
        <div class="form-group">
            <div class="col-md-10">
                @Html.DropDownList("CountryName", @ViewBag.CountryName as List<SelectListItem>, "--- select ---", new { @class = "form-control btn-secondary" })
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.StateName, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.EnquiryPurpose, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.DropDownList("StateName", @ViewBag.StateName as List<SelectListItem>, "--- select ---", new { @class = "form-control btn-secondary" })
                @*@Html.ValidationMessageFor(model => model.StateName, "", new { @class = "text-danger" })*@
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.CityName, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.EnquiryPurpose, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.DropDownList("CityName", @ViewBag.CityName as List<SelectListItem>, "--- select ---", new { @class = "form-control btn-secondary" })
                @*@Html.ValidationMessageFor(model => model.CityName, "", new { @class = "text-danger" })*@
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Proceed" id="submitbtn" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
